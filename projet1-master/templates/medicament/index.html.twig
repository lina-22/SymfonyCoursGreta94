{% extends 'base.html.twig' %}

{% block title %}Medicament index{% endblock %}

{% block body %}
    <h1>Medicament index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DepotLegal</th>
                <th>NomCommercial</th>
                <th>Code</th>
                <th>Composition</th>
                <th>EffetsIndesirable</th>
                <th>ContreIndication</th>
                <th>PrixEchantillon</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medicament in medicaments %}
            <tr>
                <td>{{ medicament.id }}</td>
                <td>{{ medicament.depotLegal }}</td>
                <td>{{ medicament.nomCommercial }}</td>
                <td>{{ medicament.code }}</td>
                <td>{{ medicament.composition }}</td>
                <td>{{ medicament.effetsIndesirable }}</td>
                <td>{{ medicament.contreIndication }}</td>
                <td>{{ medicament.prixEchantillon }}</td>
                <td>
                    <a href="{{ path('app_medicament_show', {'id': medicament.id}) }}">show</a>
                    <a href="{{ path('app_medicament_edit', {'id': medicament.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medicament_new') }}">Create new</a>
{% endblock %}
